#!/usr/bin/env bash
set -eo pipefail

function wget_urls {
    for key in "${!urlmap[@]}" ; do
        local pkg="${urlmap[${key}]}"
        echo "${key}"
        wget "${pkg}"
    done
}

declare -ar source_arr=(
    'pypy2.7-7.3.8'
    'pypy3.7-7.3.8'
    'pypy3.8-7.3.8'
    'pypy3.9-7.3.8'
    'pypy2.7-7.3.8-src'
    'pypy3.7-7.3.8-src'
    'pypy3.8-7.3.8-src'
    'pypy3.9-7.3.8-src'
)

function write_checksums {
    # expected sums
    # https://www.pypy.org/checksums.html
    cat <<EOF >expected-sums.txt
