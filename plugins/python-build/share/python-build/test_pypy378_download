# download all files
for source in "${source_arr[@]}" ; do
    # check urls
    source "${source}"
    wget_urls

    # install
    # pyenv install "${source}"
done

write_checksums

# calculate new sums
sha256sum *.{bz2,zip} > calculated-sums.txt

# compare
diff expected-sums.txt calculated-sums.txt
